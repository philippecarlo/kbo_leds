@prefix tree: <http://example.com/tree#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix tree: <https://w3id.org/tree#> .

tree:NodeShape
    a sh:NodeShape ;
    sh:property [
        sh:path rdf:type ;
        sh:value tree:Node;
        sh:minCount 1;
        sh:message "The value of tree:node must have rdf:type pointing to tree:Node."@en ;

    ] .

tree:RelationShape
    a sh:NodeShape ;
    sh:targetClass tree:Relation ;
    sh:property [
        sh:path tree:node ;
        sh:node tree:NodeShape ;
        sh:minCount 1;
        sh:message "All instances of tree:Relation must have a tree:node property pointing to an instance of tree:Node."@en ;
    ] .
